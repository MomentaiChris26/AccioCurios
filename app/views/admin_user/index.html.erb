<div class="container">
  <h1>Admin Database</h1>
  <!-- Gives the ability for admin to add a new condition to the database -->
  <% if can? :manage, :all %>
    <h2>Manage Users</h2>
    <% list_all_users.each do |user| %>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
    <h6 class="card-text mb-2 text-muted"><%= user.username %></h6>
    <p class="card-text">User ID: <%= user.id %></p>
    <%= link_to 'Edit User', user_path(user) %>
  </div>
  </div>
    <% end %>
<br>

  <div class="listing-conditions">
    <h2 >Manage Conditions for Listing</h2><br>
    <!-- Allows admin to add a new condition -->
    <h5>Add New Condition</h5>
    <%= render 'admin_user/partials/conditionsform' %>
    <br><br>

  <!-- Displays all listing conditions currently in the database -->
  <h5>Manage Current Conditions</h5>
  <ul class="list-group">
    <% list_condition.each do |condition| %>
      <li class="list-group-item">  
      <h6 class="card-title"><%= condition.status %></h6>
    <%= link_to 'Delete', condition_path(condition) , method: :delete, data: { confirm: 'Are you sure?'} %>
  </li>
        <% end %>
      </ul><br>
    <% end %>
  </div><br>

  <div class="listing-categories">
  <h2>Manage Categories for Listings</h2><br>

  <h5>Add New Category</h5>
<%= render 'admin_user/partials/categoriesform' %><br>

<h5>Manage Current Categories</h5>
    <ul class="list-group">
     <% list_all_categories.each do |category| %>
      <li class="list-group-item">
        <h6 class="card-title"><%= category.name %></h6>
        <%= link_to 'Delete', category_path(category), method: :delete, data: { confirm: "Are you sure?"} %>
      </li> 
     <% end %>
    </ul>
  </div>

</div>




  <!-- Bootstrap Modal for Adding new listing conditions -->
<div class="modal fade" id="modalCategories" tabindex="-1" role="dialog" aria-labelledby="modalCategoriesTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalCategoriesTitle">Add A New Category</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <%= form_with(model: new_category, url: conditions_path ) do |form| %>
      <div class="modal-body">
        <%= form.label :name %>: <%= form.text_field :name %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= form.submit class:"btn btn-success" %>
      </div>
    <% end %>
    </div>
  </div>


</div>






