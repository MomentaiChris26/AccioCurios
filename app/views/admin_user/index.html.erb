<div class="container">
  <h1>Admin Database</h1>
  <!-- Gives the ability for admin to add a new condition to the database -->
    <h2>Manage Users</h2>
    <%= render 'admin_user/partials/listusers' %>
  <br>

  <div class="listings">
  <h2>All Listings</h2>
    <%= render 'admin_user/partials/listingsall' %>
  </div>
  <br>

  <div class="listing-conditions">
    <h2 >Manage Conditions for Listing</h2><br>
    <!-- Allows admin to add a new condition -->
    <h5>Add New Condition</h5>
    <%= render 'admin_user/partials/conditionsform' %>
    <br><br>
    <!-- Displays all listing conditions currently in the database -->
    <h5>Manage Current Conditions</h5>
      <ul class="list-group">
      <% list_condition.each do |condition| %>
        <li class="list-group-item">  
          <h6 class="card-title"><%= condition.status %></h6>
          <%= link_to 'Delete', condition_path(condition) , method: :delete, data: { confirm: 'Are you sure?'} %>
        </li>
      <% end %>
      </ul>
  </div><br>

  <div class="listing-categories">
  <h2>Manage Categories for Listings</h2><br>

  <h5>Add New Category</h5>
<%= render 'admin_user/partials/categoriesform' %><br>

<h5>Manage Current Categories</h5>
    <ul class="list-group">
     <% list_all_categories.each do |category| %>
      <li class="list-group-item">
        <h6 class="card-title"><%= category.name %></h6>
        <%= link_to 'Delete', category_path(category), method: :delete, data: { confirm: "Are you sure?"} %>
      </li> 
     <% end %>
    </ul>
  </div>

</div>
</div>






