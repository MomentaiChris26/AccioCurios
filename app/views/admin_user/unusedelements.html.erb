<!-- Button for Modal below -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalCategories">Add New Listing Category</button>

  <!-- Bootstrap Modal for Adding new listing conditions -->
<div class="modal fade" id="modalCategories" tabindex="-1" role="dialog" aria-labelledby="modalCategoriesTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalCategoriesTitle">Add A New Category</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <%= form_with(model: new_category, url: conditions_path ) do |form| %>
      <div class="modal-body">
        <%= form.label :name %>: <%= form.text_field :name %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= form.submit class:"btn btn-success" %>
      </div>
    <% end %>
    </div>
  </div>
