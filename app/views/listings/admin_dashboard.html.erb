
<div class="container">
<% if current_user.admin? %>
  <h1>Admin Database</h1>
<h2 >Conditions</h2>
<ul class="list-group">
<% list_condition.each do |condition| %>
  <li class="list-group-item">  
    <h6 class="card-title"><%= condition.status %></h6>
    <%= link_to 'Delete', condition_path(condition) , method: :delete, data: { confirm: 'Are you sure?'} %>
  </li>
<% end %>
</ul>
<br>
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalCenter">
    Add New Listing Condition
  </button>
</div>
<div class="modal fade" id="ModalCenter" tabindex="-1" role="dialog" aria-labelledby="ModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ModalCenterTitle">Add A New Condition</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <%= form_with(model: @condition, url: conditions_path ) do |form| %>
      <div class="modal-body">
        <%= form.label :status %>: <%= form.text_field :status %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= form.submit class:"btn btn-success" %>
      </div>
    <% end %>
    </div>
  </div>

<% else %>
  You are not permitted to view this dashboard
<% end %>
</div>



